<%= notice %>
<div class="container">
<div class='row'>
<div class='col-xs-3'>
<%= render 'books/list', user: @user ,book_new: @book_new  %>
</div>


<div class = 'col-xs-9'>
  <h1>Book detail</h1>
<table class= "table">
  <thead>
   <tr>
    <th></th>
    <th>Title</th>
    <th>opinion</th>
    <th colspan="3"></th>
   </tr>
  </thead>
  <tbody>
    <tr>
    <td>
      <%= link_to user_path(@user) do %>
      <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "download.jpg"%><br>
      <%= @user.name %><% end %></td>
    <td><%= @book.title %></td>
    <td><%= @book.body %></td>
    <% if @user == current_user %>
    <td><%=link_to "Edit",edit_book_path(@book.id),class:"btn-sm btn-success edit_book" %></td>
    <td><%=link_to "Destroy" ,book_path(@book.id), method: :delete, "data-confirm" => "Are you sure?",class:"btn-sm btn-danger destroy" %></td>
    <% end %>
    </tr>
  </tbody>
</table>
</div>
</div>
</div>