<%= notice %>
<div class="container">
<div class='row'>
<div class='col-xs-3'>
<%= render 'books/list', user: @user ,book_new: @book  %>
</div>

  <div class='col-xs-9'>
    <h2>Books</h2>

    <table class= "table">
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
      <tr>
      <td><%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, fallback: "download.jpg"%></td>
      <td><%=link_to book.title,book_path(book.id) %></td>
      <td><%= book.body %></td>
      </tr>
      <% end %>
    </tbody>

</table>
</div>
</div>
</div>