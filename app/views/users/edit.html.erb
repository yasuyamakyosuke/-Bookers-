<div class ="container">
    <div class="row">
        <div class="col-md-4">
            <h2>User info</h2>
            <%= form_for(@user) do |f| %>
            <% if @user.errors.any? %>
            <h3><%= @user.errors.count %> errors prohibited this obj from being saved:</h3>
            <% @user.errors.full_messages.each do |message| %>

            <ul>
                <li><%=message %></li>
            </ul>
            <% end %>
            <% end %>
    <div class="form-group has-icon">
        Name
        <%= f.text_field :name, autofocus: true, class:"form-control", id:"inputEmail", placeholder:"名前"%>
    </div>
        Image
        <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, class:" pull-left profile-thumb",fallback: "download.jpg"%>
    <label class="control-label sr-only" for="inputEmail">ProfileImage</label>
    <%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "user-edit-form" %>
    introduction
    <%= f.text_area :introduction %><br>
    <%= f.submit "Update User" %>
<% end %>
</div>
</div>
</div>


